<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firstsolutions.MainController"> <!-- Set VBox.vgrow to ALWAYS -->

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="FFsmart" />

    <VBox alignment="CENTER" fillWidth="false" minHeight="200.0" minWidth="100.0" spacing="10.0">
        <Label style="-fx-font-size: 12;" text="Username:" />
        <TextField fx:id="usernametextfield" prefWidth="300" promptText="Enter your username" />

        <Label style="-fx-font-size: 12;" text="Password:" />
        <TextField fx:id="passwordtextfield" prefWidth="300" promptText="Enter your password" />
    </VBox>

    <HBox alignment="CENTER" spacing="10.0" fillHeight="false">
        <Button onAction="#onLoginButtonClick" style="-fx-font-size: 14;" prefWidth="80" text="Login" />
        <Button onAction="#onRegisterButtonClick" style="-fx-font-size: 14;" prefWidth="80" text="Register" />
    </HBox>

</VBox>
