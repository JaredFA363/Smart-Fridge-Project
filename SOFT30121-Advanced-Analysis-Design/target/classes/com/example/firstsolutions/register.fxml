<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firstsolutions.Controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="FFsmart Registration" />

    <VBox alignment="CENTER" fillWidth="false" minHeight="200.0" minWidth="100.0" spacing="10.0">
        <TextField fx:id="firstnameTextField" prefWidth="300" promptText="First Name" />
        <TextField fx:id="lastnameTextField" prefWidth="300" promptText="Last Name" />
        <TextField fx:id="usernameTextField" prefWidth="300" promptText="Username" />
        <TextField fx:id="passwordTextField" prefWidth="300" promptText="Password" />
    </VBox>

    <HBox alignment="CENTER" spacing="10.0" fillHeight="false">
        <Button onAction="#onRegisterButtonClick" style="-fx-font-size: 14;" prefWidth="150" text="Register" />
        <Button onAction="#onLoginButtonClick" style="-fx-font-size: 14;" prefWidth="150" text="Login" />
    </HBox>
</VBox>
